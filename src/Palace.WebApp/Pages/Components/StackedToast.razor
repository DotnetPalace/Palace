<div class="toast @display @toastStyle" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="false">
    <div class="toast-header">
        <strong class="me-auto">@StackedToastInfo.Title</strong>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Fermer" @onclick="@(() => OnClosed())"></button>
    </div>
    <div class="toast-body">
        @Body
    </div>
</div>


