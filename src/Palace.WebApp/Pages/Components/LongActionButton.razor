@if (string.IsNullOrWhiteSpace(disabled))
{
	<button class="btn btn-sm @ButtonType m-1" @attributes="@CatpuredAttributes" @onclick="Click">
		@ChildContent
	</button>
}
else
{
	<button class="btn btn-sm @ButtonType m-1" @attributes="@CatpuredAttributes" disabled>
		@if (showLoader)
		{
			<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
		}
		@ChildContent
	</button>
}
